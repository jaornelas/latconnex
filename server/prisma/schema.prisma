generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  businesses Business[]
  createdAt DateTime    @default(now())
}

model Business {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  category    String
  address     String
  city        String
  state       String
  phone       String?
  email       String?
  website     String?
  lat         Float?
  lng         Float?
  owner       User      @relation(fields: [ownerId], references: [id])
  ownerId     Int
  createdAt   DateTime  @default(now())
}
