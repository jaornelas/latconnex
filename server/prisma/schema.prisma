generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  businesses Business[]
  createdAt DateTime    @default(now())
}

model Business {
  id            Int       @id @default(autoincrement())
  name          String
  description   String?
  category      String
  address       String
  city          String
  state         String
  lat           Float?
  lng           Float?
  website       String?
  phone         String?
  email         String?
  googlePlaceId String?   @unique
  googleRating  Float?
  googleImage   String?
  createdAt     DateTime  @default(now())
  ownerId       Int
  owner         User      @relation(fields: [ownerId], references: [id])
}

